{
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
	"env": {
		"node": true,
		"mocha": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"max-len": ["error", 120],
		"no-const-assign": "error",
		"vars-on-top": "error",
		"no-multi-assign": "error",
		"no-var": "error",
		"arrow-body-style": ["error", "always"],
		"no-unreachable": "warn",
		"eqeqeq": ["error", "always"],
		"dot-notation": "warn",
		"no-eq-null": "warn",
		"no-multi-spaces": "error",
		"no-param-reassign": "warn",
		"comma-dangle": ["error", "always"],
		"quotes": ["warn", "double"],
		"no-tabs": 0,
		"semi": ["error", "always"],
		"space-before-function-paren": "warn"
	}
}
